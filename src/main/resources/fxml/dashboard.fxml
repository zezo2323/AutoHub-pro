<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17"
            fx:controller="com.autohub.autohub.frontend.controllers.DashboardController"
            style="-fx-background-color: #f8fafc;">

    <!-- TOP NAVIGATION BAR -->
    <top>
        <HBox spacing="0"
              style="-fx-background-color: white; -fx-border-color: #e2e8f0; -fx-border-width: 0 0 1 0; -fx-padding: 0;">
            <padding>
                <Insets top="0" right="0" bottom="0" left="0"/>
            </padding>

            <!-- LOGO -->
            <HBox spacing="12" style="-fx-padding: 16 30;">
                <FontIcon iconLiteral="fas-car" iconSize="32" style="-fx-icon-color: #2c5ff6;"/>
                <VBox spacing="2" style="-fx-alignment: center-left;">
                    <Label text="DriveNow" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #0f172a;"/>
                    <Label text="Admin Panel" style="-fx-font-size: 11px; -fx-text-fill: #64748b;"/>
                </VBox>
            </HBox>

            <!-- NAVIGATION BUTTONS -->
            <HBox spacing="0">
                <Button fx:id="btnDashboard" text="Dashboard" onAction="#handleDashboard"
                        style="-fx-background-color: #2c5ff6; -fx-text-fill: white; -fx-padding: 16 20; -fx-font-size: 14px; -fx-border-width: 0; -fx-background-radius: 0;"/>
                <Button fx:id="btnCars" text="Cars" onAction="#handleCars"
                        style="-fx-background-color: transparent; -fx-text-fill: #64748b; -fx-padding: 16 20; -fx-font-size: 14px; -fx-border-width: 0;"/>
                <Button fx:id="btnRentals" text="Rentals" onAction="#handleRentals"
                        style="-fx-background-color: transparent; -fx-text-fill: #64748b; -fx-padding: 16 20; -fx-font-size: 14px; -fx-border-width: 0;"/>
                <Button fx:id="btnInvoices" text="Invoices" onAction="#handleInvoices"
                        style="-fx-background-color: transparent; -fx-text-fill: #64748b; -fx-padding: 16 20; -fx-font-size: 14px; -fx-border-width: 0;"/>
                <Button fx:id="btnComments" text="Comments" onAction="#handleComments"
                        style="-fx-background-color: transparent; -fx-text-fill: #64748b; -fx-padding: 16 20; -fx-font-size: 14px; -fx-border-width: 0;"/>
                <Button fx:id="btnSettings" text="Settings" onAction="#handleSettings"
                        style="-fx-background-color: transparent; -fx-text-fill: #64748b; -fx-padding: 16 20; -fx-font-size: 14px; -fx-border-width: 0;"/>
            </HBox>

            <!-- SPACER -->
            <Region HBox.hgrow="ALWAYS"/>

            <!-- ADMIN USER BUTTON -->
            <Button fx:id="btnProfile" onAction="#handleProfile"
                    style="-fx-background-color: transparent; -fx-padding: 8 12; -fx-background-radius: 50%;">
                <graphic>
                    <StackPane prefWidth="48" prefHeight="48">
                        <Circle stroke="#e5e7eb" strokeWidth="2" radius="22"
                                fill="linear-gradient(to bottom right, #3b82f6, #1d4ed8)" strokeType="outside"/>
                        <FontIcon iconLiteral="fas-user" iconSize="24" fill="white"/>
                        <Label text="AU" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                    </StackPane>
                </graphic>
            </Button>

            <padding>
                <Insets right="30"/>
            </padding>
        </HBox>
    </top>

    <!-- MAIN CONTENT -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-border-width: 0; -fx-padding: 0;">
            <VBox fx:id="contentBox" spacing="24" style="-fx-background-color: #f8fafc;">
                <padding>
                    <Insets top="32" right="40" bottom="40" left="40"/>
                </padding>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>