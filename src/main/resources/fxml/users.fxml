<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/17"
      fx:controller="com.autohub.autohub.frontend.controllers.UsersController"
      spacing="24"
      style="-fx-background-color: #f8fafc;">

    <padding>
        <Insets top="32" right="40" bottom="40" left="40"/>
    </padding>

    <!-- HEADER -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <VBox spacing="8" HBox.hgrow="ALWAYS">
            <Label text="Users Management"
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #0f172a;"/>
            <Label text="Manage all system users and permissions"
                   style="-fx-font-size: 14px; -fx-text-fill: #64748b;"/>
        </VBox>
        <Button fx:id="btnAddUser"
                text="Add New User"
                onAction="#handleAddUser"
                style="-fx-background-color: #3b82f6; -fx-text-fill: white;
                       -fx-padding: 12 24; -fx-background-radius: 8;
                       -fx-cursor: hand; -fx-font-weight: 600; -fx-font-size: 14px;"/>
    </HBox>

    <!-- STATS CARDS ROW -->
    <HBox fx:id="statsRow" spacing="16" alignment="CENTER_LEFT"/>

    <!-- SEARCH & FILTER -->
    <HBox spacing="16" alignment="CENTER_LEFT">
        <TextField fx:id="txtSearch"
                   promptText="Search by name, email..."
                   prefWidth="400"
                   style="-fx-background-color: white; -fx-padding: 12 16;
                          -fx-border-color: #e5e7eb; -fx-border-radius: 8;
                          -fx-background-radius: 8; -fx-font-size: 14px;"/>

        <ComboBox fx:id="cmbRoleFilter"
                  promptText="Filter by Role"
                  prefWidth="180"
                  style="-fx-background-color: white; -fx-border-color: #e5e7eb;
                         -fx-border-radius: 8; -fx-background-radius: 8;"/>

        <Button fx:id="btnClearFilter"
                text="Clear Filters"
                onAction="#handleClearFilters"
                style="-fx-background-color: #f3f4f6; -fx-text-fill: #374151;
                       -fx-padding: 10 20; -fx-background-radius: 8;
                       -fx-cursor: hand; -fx-font-weight: 600;"/>

        <Button fx:id="btnRefresh"
                text="Refresh"
                onAction="#handleRefresh"
                style="-fx-background-color: #10b981; -fx-text-fill: white;
                       -fx-padding: 10 20; -fx-background-radius: 8;
                       -fx-cursor: hand; -fx-font-weight: 600;"/>
    </HBox>

    <!-- TABLE CARD -->
    <VBox style="-fx-background-color: white; -fx-background-radius: 12;
                 -fx-padding: 24; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 12, 0, 0, 3);">

        <TableView fx:id="usersTable"
                   prefHeight="600"
                   VBox.vgrow="ALWAYS"
                   style="-fx-background-color: transparent; -fx-border-width: 0;">
            <columns>
                <TableColumn fx:id="colUserId" text="ID" prefWidth="80"/>
                <TableColumn fx:id="colName" text="Full Name" prefWidth="200"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="250"/>
                <TableColumn fx:id="colPhone" text="Phone" prefWidth="150"/>
                <TableColumn fx:id="colRole" text="Role" prefWidth="120"/>
                <TableColumn fx:id="colCreatedAt" text="Created At" prefWidth="150"/>
                <TableColumn fx:id="colActions" text="Actions" prefWidth="180" sortable="false"/>
            </columns>
        </TableView>
    </VBox>

</VBox>
