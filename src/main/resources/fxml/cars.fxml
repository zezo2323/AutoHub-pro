<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="com.autohub.autohub.frontend.controllers.CarsController"
            style="-fx-background-color: #f8fafc;"
            prefWidth="1200" prefHeight="800">


    <center>
        <VBox spacing="24">
            <padding>
                <Insets top="32" right="40" bottom="40" left="40"/>
            </padding>

            <!-- Header -->
            <HBox spacing="16" alignment="CENTER_LEFT">
                <VBox spacing="4" HBox.hgrow="ALWAYS">
                    <Label text="Cars Management"
                           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>
                    <Label text="Manage your car inventory"
                           style="-fx-font-size: 14px; -fx-text-fill: #64748b;"/>
                </VBox>

                <Button fx:id="btnAddNewCar" text="Add New Car" onAction="#handleAddNewCar"
                        style="-fx-background-color: #2c5ff6; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: 600; -fx-padding: 12 24; -fx-background-radius: 8; -fx-cursor: hand;">
                    <graphic>
                        <FontIcon iconLiteral="fas-plus" iconSize="14" fill="white"/>
                    </graphic>
                </Button>
            </HBox>

            <!-- Statistics Cards -->
            <HBox spacing="16" fx:id="statsContainer"/>

            <!-- Search Box -->
            <HBox alignment="CENTER_RIGHT">
                <Region HBox.hgrow="ALWAYS"/>
                <HBox spacing="0" alignment="CENTER_LEFT"
                      style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-border-width: 1; -fx-pref-width: 400px;">
                    <Label style="-fx-padding: 0 0 0 12;">
                        <graphic>
                            <FontIcon iconLiteral="fas-search" iconSize="14" iconColor="#94a3b8"/>
                        </graphic>
                    </Label>
                    <TextField fx:id="txtSearch" promptText="...Search cars"
                               style="-fx-background-color: transparent; -fx-border-width: 0; -fx-padding: 12 16; -fx-font-size: 14px;"
                               HBox.hgrow="ALWAYS"/>
                </HBox>
            </HBox>
            <VBox style="-fx-background-color: white; -fx-background-radius: 12;
                 -fx-padding: 24; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 12, 0, 0, 3);">
                <!-- Table -->
                <TableView fx:id="carsTable"
                           maxWidth="Infinity"
                           prefHeight="500">
                    <columns>
                        <TableColumn fx:id="colCar" text="Car"/>
                        <TableColumn fx:id="colCategory" text="Category" style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colYear" text="Year" style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colPrice" text="Price/Day" style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colSpecs" text="Specs"/>
                        <TableColumn fx:id="colStatus" text="Status" style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colActions" text="Actions" sortable="false"
                                     style="-fx-alignment: CENTER;"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>

</BorderPane>
