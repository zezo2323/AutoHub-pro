<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/17"
            fx:controller="com.autohub.autohub.frontend.controllers.InvoiceController"
            prefWidth="420"
            prefHeight="650"
            fitToWidth="true"
            style="-fx-background: white; -fx-background-color: white;">

    <VBox style="-fx-background-color: white;">

        <!-- SUCCESS BANNER -->
        <VBox style="-fx-background-color: #d1fae5; -fx-padding: 16; -fx-alignment: center;">
            <HBox alignment="CENTER" spacing="10">
                <Label text="âœ“" style="-fx-font-size: 28px; -fx-text-fill: #10b981;
                                       -fx-font-weight: bold; -fx-background-color: white;
                                       -fx-background-radius: 50; -fx-min-width: 45; -fx-min-height: 45;
                                       -fx-alignment: center;"/>
            </HBox>
            <Label text="!Booking Confirmed"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #10b981; -fx-padding: 6 0 0 0;"/>
            <Label text="Your rental has been successfully confirmed"
                   style="-fx-font-size: 11px; -fx-text-fill: #059669;"/>
        </VBox>

        <!-- INVOICE CONTENT -->
        <VBox style="-fx-padding: 20; -fx-spacing: 14;">

            <!-- HEADER -->
            <HBox alignment="CENTER_LEFT">
                <VBox HBox.hgrow="ALWAYS" spacing="2">
                    <Label text="INVOICE" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #0f172a;"/>
                    <Label fx:id="lblInvoiceNumber" text="Invoice: R001"
                           style="-fx-font-size: 11px; -fx-text-fill: #64748b;"/>
                    <Label fx:id="lblDate" text="Date: 12/18/2025"
                           style="-fx-font-size: 11px; -fx-text-fill: #64748b;"/>
                    <Label fx:id="lblStatus" text="Status: Confirmed"
                           style="-fx-font-size: 11px; -fx-text-fill: #10b981; -fx-font-weight: bold;"/>
                </VBox>

                <VBox alignment="TOP_RIGHT" spacing="1">
                    <Label text="Car Rental System"
                           style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #0f172a;"/>
                    <Label text="Premium Car Rentals"
                           style="-fx-font-size: 10px; -fx-text-fill: #64748b;"/>
                    <Label text="Business Street 123"
                           style="-fx-font-size: 10px; -fx-text-fill: #64748b;"/>
                    <Label text="New York, NY 10001"
                           style="-fx-font-size: 10px; -fx-text-fill: #64748b;"/>
                    <Label text="contact@carrental.com"
                           style="-fx-font-size: 10px; -fx-text-fill: #64748b;"/>
                    <Label text="123-4567-8901"
                           style="-fx-font-size: 10px; -fx-text-fill: #64748b;"/>
                </VBox>
            </HBox>

            <Separator/>

            <!-- RENTAL PERIOD & BILL TO -->
            <HBox spacing="30">
                <!-- Rental Period -->
                <VBox spacing="6" HBox.hgrow="ALWAYS">
                    <Label text="Rental Period"
                           style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #0f172a;"/>
                    <HBox spacing="4">
                        <Label text="Pickup:" style="-fx-font-size: 11px; -fx-text-fill: #64748b;"/>
                        <Label fx:id="lblPickupDate" text="2024-12-01"
                               style="-fx-font-size: 11px; -fx-text-fill: #0f172a; -fx-font-weight: 600;"/>
                    </HBox>
                    <HBox spacing="4">
                        <Label text="Return:" style="-fx-font-size: 11px; -fx-text-fill: #64748b;"/>
                        <Label fx:id="lblReturnDate" text="2024-12-10"
                               style="-fx-font-size: 11px; -fx-text-fill: #0f172a; -fx-font-weight: 600;"/>
                    </HBox>
                    <HBox spacing="4">
                        <Label text="Duration:" style="-fx-font-size: 11px; -fx-text-fill: #64748b;"/>
                        <Label fx:id="lblDuration" text="9 days"
                               style="-fx-font-size: 11px; -fx-text-fill: #0f172a; -fx-font-weight: 600;"/>
                    </HBox>
                </VBox>

                <!-- Bill To -->
                <VBox spacing="6" HBox.hgrow="ALWAYS">
                    <Label text="Bill To"
                           style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #0f172a;"/>
                    <Label fx:id="lblCustomerName" text="Admin User"
                           style="-fx-font-size: 11px; -fx-text-fill: #0f172a; -fx-font-weight: 600;"/>
                    <Label fx:id="lblCustomerEmail" text="admin@carrental.com"
                           style="-fx-font-size: 11px; -fx-text-fill: #64748b;"/>
                    <Label fx:id="lblCustomerPhone" text="123456789"
                           style="-fx-font-size: 11px; -fx-text-fill: #64748b;"/>
                </VBox>
            </HBox>

            <Separator/>

            <!-- VEHICLE INFORMATION -->
            <VBox spacing="6">
                <Label text="Vehicle Information"
                       style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #0f172a;"/>

                <HBox spacing="12" alignment="CENTER_LEFT">
                    <!-- Car Image -->
                    <StackPane fx:id="carImageContainer"
                               style="-fx-background-color: #e5e7eb; -fx-background-radius: 8;"
                               prefWidth="70" prefHeight="70">
                        <Label text="ðŸš—" style="-fx-font-size: 36px;"/>
                    </StackPane>

                    <!-- Car Details -->
                    <VBox spacing="3">
                        <Label fx:id="lblCarName" text="Audi RS7"
                               style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #0f172a;"/>
                        <HBox spacing="10">
                            <Label fx:id="lblYear" text="Year: 2024"
                                   style="-fx-font-size: 10px; -fx-text-fill: #64748b;"/>
                            <Label fx:id="lblCategory" text="Automatic"
                                   style="-fx-font-size: 10px; -fx-text-fill: #64748b;"/>
                            <Label fx:id="lblFuel" text="Seats 4"
                                   style="-fx-font-size: 10px; -fx-text-fill: #64748b;"/>
                        </HBox>
                    </VBox>
                </HBox>
            </VBox>

            <Separator/>

            <!-- PAYMENT DETAILS -->
            <VBox spacing="8">
                <Label text="Payment Details"
                       style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #0f172a;"/>

                <HBox alignment="CENTER_LEFT">
                    <Label text="Daily Rate" style="-fx-font-size: 11px; -fx-text-fill: #64748b;" HBox.hgrow="ALWAYS"/>
                    <Label fx:id="lblDailyRate" text="250.00"
                           style="-fx-font-size: 11px; -fx-text-fill: #0f172a;"/>
                </HBox>

                <HBox alignment="CENTER_LEFT">
                    <Label text="Number of Days" style="-fx-font-size: 11px; -fx-text-fill: #64748b;"
                           HBox.hgrow="ALWAYS"/>
                    <Label fx:id="lblNumDays" text="9"
                           style="-fx-font-size: 11px; -fx-text-fill: #0f172a;"/>
                </HBox>

                <HBox alignment="CENTER_LEFT">
                    <Label text="Subtotal" style="-fx-font-size: 11px; -fx-text-fill: #64748b;" HBox.hgrow="ALWAYS"/>
                    <Label fx:id="lblSubtotal" text="2250.00"
                           style="-fx-font-size: 11px; -fx-text-fill: #0f172a;"/>
                </HBox>

                <HBox alignment="CENTER_LEFT">
                    <Label text="Tax (10%)" style="-fx-font-size: 11px; -fx-text-fill: #64748b;" HBox.hgrow="ALWAYS"/>
                    <Label fx:id="lblTax" text="0.00"
                           style="-fx-font-size: 11px; -fx-text-fill: #0f172a;"/>
                </HBox>

                <Separator/>

                <HBox alignment="CENTER_LEFT" style="-fx-padding: 4 0 0 0;">
                    <Label text="Total Amount"
                           style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #0f172a;"
                           HBox.hgrow="ALWAYS"/>
                    <Label fx:id="lblTotalAmount" text="2250.00"
                           style="-fx-font-size: 17px; -fx-font-weight: bold; -fx-text-fill: #10b981;"/>
                </HBox>
            </VBox>

            <Separator/>

            <!-- FOOTER -->
            <VBox spacing="4" alignment="CENTER">
                <Label text="Thank you for choosing our car rental service"
                       style="-fx-font-size: 11px; -fx-text-fill: #64748b; -fx-font-style: italic;"/>
                <Label text="Please keep this invoice for your records"
                       style="-fx-font-size: 10px; -fx-text-fill: #94a3b8;"/>
            </VBox>

            <!-- ACTION BUTTONS -->
            <HBox spacing="10" alignment="CENTER" style="-fx-padding: 8 0 8 0;">
                <Button fx:id="btnPrint" text="Print Invoice"
                        style="-fx-background-color: #0f172a; -fx-text-fill: white;
                               -fx-padding: 10 20; -fx-background-radius: 8; -fx-font-size: 12px;
                               -fx-font-weight: 600; -fx-cursor: hand;"/>
                <Button fx:id="btnDownload" text="Download"
                        style="-fx-background-color: #10b981; -fx-text-fill: white;
                               -fx-padding: 10 20; -fx-background-radius: 8; -fx-font-size: 12px;
                               -fx-font-weight: 600; -fx-cursor: hand;"/>
                <Button fx:id="btnBackToCars" text="Back"
                        style="-fx-background-color: transparent; -fx-border-color: #cbd5e1;
                               -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8;
                               -fx-text-fill: #64748b; -fx-padding: 10 20; -fx-font-size: 12px;
                               -fx-cursor: hand;"/>
            </HBox>

        </VBox>

    </VBox>

</ScrollPane>
