<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.autohub.autohub.frontend.controllers.ReviewsController"
            fitToWidth="true"
            style="-fx-background: #f8f9fa; -fx-border-color: transparent;"
            vbarPolicy="AS_NEEDED">

    <VBox fx:id="rootContainer"
          spacing="25"
          alignment="TOP_CENTER"
          style="-fx-padding: 30 20 50 20;">

        <!-- TITLE SECTION -->
        <VBox alignment="CENTER" spacing="6">
            <Label text="Customer Reviews"
                   style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #212529;" />
            <Label text="Share your experience with our cars"
                   style="-fx-font-size: 14; -fx-text-fill: #6c757d;" />
        </VBox>

        <!-- WRITE REVIEW CARD -->
        <VBox fx:id="writeCard"
              spacing="18"
              maxWidth="800"
              styleClass="write-card">

            <!-- Card Title -->
            <Label text="Write a Review"
                   style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #343a40;" />

            <!-- Select Car Dropdown - Full Width -->
            <VBox spacing="6">
                <Label text="Select Car"
                       style="-fx-font-size: 14; -fx-font-weight: 600; -fx-text-fill: #495057;" />
                <ComboBox fx:id="carCombo"
                          promptText="Choose a car"
                          prefHeight="44"
                          styleClass="custom-combo" />
            </VBox>

            <!-- Rating Section -->
            <VBox spacing="6">
                <Label text="Rating"
                       style="-fx-font-size: 14; -fx-font-weight: 600; -fx-text-fill: #495057;" />
                <HBox fx:id="starsBox"
                      alignment="CENTER_LEFT"
                      spacing="8" />
            </VBox>

            <!-- Review Text Area - Smaller Height -->
            <VBox spacing="6">
                <Label text="Your Review" style="-fx-font-size: 14; -fx-font-weight: 600; -fx-text-fill: #495057;" />
                <TextArea fx:id="reviewArea"
                          promptText="...Share your experience"
                          wrapText="true"
                          prefRowCount="3"
                          prefHeight="100"
                          styleClass="review-textarea" />
            </VBox>

            <!-- Post Button - Full Width -->
            <VBox spacing="8">
                <Button fx:id="postBtn" text="Post Review" prefHeight="50" styleClass="btn-primary" />

                <!-- Message Label -->
                <Label fx:id="formMessage" style="-fx-font-size: 14; -fx-padding: 5 0 0 0;" />
            </VBox>

        </VBox>

        <!-- EXISTING REVIEWS SECTION -->
        <VBox spacing="15" maxWidth="800">
            <Label text="Recent Reviews"
                   style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #212529;" />

            <VBox fx:id="reviewsListContainer" spacing="15" />
        </VBox>

    </VBox>
</ScrollPane>