<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="com.autohub.autohub.frontend.controllers.AdminReviewsController"
            style="-fx-background-color: #f8fafc;"
            prefWidth="1200" prefHeight="800">

    <center>
        <VBox spacing="24" VBox.vgrow="ALWAYS">
            <padding>
                <Insets top="32" right="40" bottom="40" left="40"/>
            </padding>

            <VBox spacing="8">
                <Label text="Customer Reviews"
                       style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #0f172a;"/>
                <Label text="Manage customer feedback and reviews"
                       style="-fx-font-size: 14px; -fx-text-fill: #64748b;"/>
            </VBox>

            <HBox spacing="20" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                <VBox spacing="12" alignment="CENTER"
                      style="-fx-background-color: white; -fx-background-radius: 12; -fx-border-color: #e2e8f0; -fx-border-radius: 12; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2); -fx-padding: 24; -fx-pref-width: 1; -fx-pref-height: 140;"
                      HBox.hgrow="ALWAYS">
                    <Label fx:id="lblAverageRating" text="0.0"
                           style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>
                    <HBox fx:id="avgStarsBox" spacing="4" alignment="CENTER"/>
                    <Label text="Average Rating"
                           style="-fx-font-size: 14px; -fx-text-fill: #64748b;"/>
                </VBox>

                <VBox spacing="12" alignment="CENTER"
                      style="-fx-background-color: white; -fx-background-radius: 12; -fx-border-color: #e2e8f0; -fx-border-radius: 12; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2); -fx-padding: 24; -fx-pref-width: 1; -fx-pref-height: 140;"
                      HBox.hgrow="ALWAYS">
                    <Label fx:id="lblTotalReviews" text="0"
                           style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: #2563eb;"/>
                    <Label text="Total Reviews"
                           style="-fx-font-size: 14px; -fx-text-fill: #64748b;"/>
                </VBox>

                <VBox spacing="12" alignment="CENTER"
                      style="-fx-background-color: white; -fx-background-radius: 12; -fx-border-color: #e2e8f0; -fx-border-radius: 12; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2); -fx-padding: 24; -fx-pref-width: 1; -fx-pref-height: 140;"
                      HBox.hgrow="ALWAYS">
                    <Label fx:id="lblFiveStarReviews" text="0"
                           style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: #f59e0b;"/>
                    <Label text="5-Star Reviews"
                           style="-fx-font-size: 14px; -fx-text-fill: #64748b;"/>
                </VBox>
            </HBox>


            <VBox spacing="16" VBox.vgrow="ALWAYS" style="-fx-min-height: 500;">
                <Label text="All Reviews"
                       style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>
                <Label text="Recent customer feedback and ratings"
                       style="-fx-font-size: 14px; -fx-text-fill: #64748b;"/>

                <VBox style="-fx-background-color: white; -fx-background-radius: 12; -fx-border-color: #e2e8f0; -fx-border-radius: 12; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2); -fx-min-height: 450; -fx-pref-height: 600;"
                      VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>

                    <ScrollPane fitToWidth="true" fitToHeight="true"
                                style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-background: transparent;"
                                vbarPolicy="AS_NEEDED"
                                hbarPolicy="NEVER"
                                VBox.vgrow="ALWAYS">
                        <VBox fx:id="reviewsListContainer" spacing="20"/>
                    </ScrollPane>
                </VBox>
            </VBox>

        </VBox>
    </center>

</BorderPane>
